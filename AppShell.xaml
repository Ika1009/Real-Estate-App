<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Real_Estate_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Real_Estate_App"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate local:NewPage4}"
        Route="SignInPage" />

    <TabBar Route="TabBar">
        <ShellContent 
            Title="Home" 
            ContentTemplate="{DataTemplate local:NewPage6}" 
            Route="HomePage" 
            Icon="icons_home.png"/>
        <ShellContent 
            Title="Search" 
            ContentTemplate="{DataTemplate local:NewPage6}"
            Icon="icons_search.png"
            Route="SearchPage" />
        <ShellContent 
            Title="Favourites"
            Icon="heart.png"
            ContentTemplate="{DataTemplate local:NewPage6}" 
            Route="HeartPage" />
        <ShellContent 
            Title="ProfilePage"
            Icon="icons_account.png"
            ContentTemplate="{DataTemplate local:NewPage6}" 
            Route="ProfilePage" />
    </TabBar>

</Shell>
